:host /deep/ .pagination > li > a {
  color:#0275d8;
  background: transparent;
}

:host /deep/ .table > tbody > tr > td {
  padding: 0px 8px;
  line-height: 35px;
  border-top: 1px solid rgba(255, 255, 255, 0.3);
  color: #333333;
  white-space: nowrap;
}

:host /deep/ .table > thead > tr > th{
  color: #333333;
  font-weight:bold;
  white-space: nowrap;
}

.loading {
  width: 160px;
  height: 56px;
  position: fixed;
  top: 50%;
  left: 45%;
  line-height: 56px;
  color: #fff;
  padding-left: 60px;
  font-size: 15px;
  background: #000 /*url(../../../assets/img/loader.gif) */no-repeat 10px 50%;
  opacity: 0.7;
  z-index: 9999;
  -moz-border-radius: 20px;
  -webkit-border-radius: 20px;
  border-radius: 20px;
  filter: progid:DXImageTransform.Microsoft.Alpha(opacity=70);
}
